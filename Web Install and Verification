- name: Install nginx and verify service is started
  hosts: all

  tasks:
  - name: Add epel-release repo
    yum:
      name: epel-release
      state: present

  - name: Install nginx
    yum:
      name: nginx
      state: present

  - name: Insert Index Page
    template:
      src: index.html
      dest: /usr/share/nginx/html/index.html

  - name: Start NGiNX
    service:
      name: nginx
      state: started

  - name: Check that you can connect (GET) to a page and it returns a status 200
    uri:
      url: https://192.168.56.100/
